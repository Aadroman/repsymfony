{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ article.slug }}</td>
            </tr>
            <tr>
                <th>Context</th>
                <td>{{ article.context }}</td>
            </tr>
            <tr>
                <th>ImageUrl</th>
                <td>{{ article.imageUrl }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ article.createdAt ? article.createdAt|date('d-m-Y h:m:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ article.updatedAt ? article.updatedAt|date('d-m-Y h:m:s') : '' }}</td>
            </tr>
            <tr>
                <th>Categories</th>
                <td>

                {% for category in article.categories %}
                    <div class="article-category-item badge">
                        <a href="{{ path('app_single_category', {'slug': category.slug}) }}">{{ category.name }}</a> ({{ category.articles | length }} article(s) publi√©(s))
                    </div>
                {% endfor %}
                </td>
                {# <td>{{ article.categories }}</td> #}
            </tr>
        </tbody>
    </table>

    <a class="btn" href="{{ path('app_article_index') }}">Back to List</a>

    <a class="btn" href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
