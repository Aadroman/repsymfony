{% extends 'base.html.twig' %}

{% block title %}The Blog{% endblock %}

{% block body %}
    <div class="articles">
        {% for article in articles %}
            <div class="article-item">
                <div class="article-image">
                    <img src={{article.imageUrl}} alt="Image de l'article : {{article.title}}">
                </div>
                <div class="article-details flex">
                    <div class="article-author-details">
                        <div class="article-author-picture">
                            <img src={{article.author.profile.picture}} alt="Image de profile de {{article.author.Tp4bd}}">
                        </div>
                    </div>
                    <div class="article-content-details">
                        <h2 class="article-title">{{article.title}}</h2>
                        <div class="article-createdAt">{{article.FromNow | date("d/m/Y")}}</div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
